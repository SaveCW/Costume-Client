{
  "manifest_version": 3,
  "name": "Costume-Client (Dev)",
  "description": "Client for Costume Mod by #SaveCW | Клиент для мода на костюмы от #SaveCW",
  "version": "1.1.1",
  "action": {
    "default_popup": "main.html",
    "default_icon": "./icons/icon.png"
  },
  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "cookies"
  ],
  "optional_permissions": ["tabs"],
  "optional_host_permissions": [
    "https://*/*"
  ],
  "host_permissions": [
    "https://catwar.net/cw3/*",
    "https://cat.arisamiga.rocks/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://catwar.net/cw3/*", "https://cat.arisamiga.rocks/"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}