{
  "manifest_version": 3,
  "name": "Costume-Client",
  "description": "Client for Costume Mod by #SaveCW",
  "version": "1.0",
  "action": {
    "default_popup": "main.html",
    "default_icon": "./icons/icon.png"
  },
  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "https://catwar.su/cw3/*",
    "http://localhost:1300/*"
  ],
  "background": {
    "service_worker": "background.js",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://catwar.su/cw3/*", "http://localhost:1300/"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}